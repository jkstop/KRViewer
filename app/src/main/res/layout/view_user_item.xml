<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:contentPadding="@dimen/content_default_padding"
    app:cardBackgroundColor="@color/colorPrimaryLight"
    android:id="@id/user_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@id/user_card_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_user_not_found"
            android:layout_width="100dp"
            android:layout_height="120dp" />

        <TextView
            android:id="@id/user_card_initials"
            style="@style/TextAppearance.AppCompat.Title"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/user_card_photo"
            android:paddingStart="@dimen/content_default_padding"
            android:maxLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ololo oloo lolo"/>

        <TextView
            android:id="@id/user_card_division"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@id/user_card_photo"
            android:layout_toEndOf="@id/user_card_photo"
            android:paddingStart="@dimen/content_default_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            style="@style/TextAppearance.AppCompat.Subhead"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>