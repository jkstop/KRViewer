<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@id/dialog_sql_setting_input_server"
        android:hint="@string/hint_sql_input_server_name"
        android:paddingStart="@dimen/content_default_padding"
        android:paddingEnd="@dimen/content_default_padding"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/dialog_sql_setting_status"
        app:errorEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@id/dialog_sql_setting_status"
        android:src="@drawable/ic_cloud_off_black_36dp"
        android:layout_toStartOf="@id/dialog_sql_setting_reconnect"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/content_default_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@id/dialog_sql_setting_reconnect"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/content_default_padding"
        android:src="@drawable/ic_sync_black_36dp"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>